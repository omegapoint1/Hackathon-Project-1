@tailwind base;
@tailwind components;
@tailwind utilities;

/* ============================================================================
   LIMINAL BRAND FONTS
   ============================================================================ */

/* ABC Marist Font Family (Display/Headings) */
@font-face {
  font-family: "ABC Marist";
  src: url("/fonts/abc-marist/ABCMarist-Regular.otf") format("opentype");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "ABC Marist";
  src: url("/fonts/abc-marist/ABCMarist-Medium.otf") format("opentype");
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "ABC Marist";
  src: url("/fonts/abc-marist/ABCMarist-SemiBold.otf") format("opentype");
  font-weight: 600;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "ABC Marist";
  src: url("/fonts/abc-marist/ABCMarist-Bold.otf") format("opentype");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

/* Helvetica Monospaced Pro Font Family (Body/Monospace) */
@font-face {
  font-family: "Helvetica Monospaced Pro";
  src: url("/fonts/helvetica-monospaced-pro/HelveticaMonospacedPro-Rg.otf")
    format("opentype");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Helvetica Monospaced Pro";
  src: url("/fonts/helvetica-monospaced-pro/HelveticaMonospacedPro-Bd.otf")
    format("opentype");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

/* ============================================================================
   NIM CHAT WIDGET STYLES
   ============================================================================ */

/* Base widget styles */
.nim-chat-widget {
  font-family:
    "Helvetica Monospaced Pro", "SF Mono", Monaco, "Courier New", monospace;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Scrollbar styling */
.nim-chat-messages::-webkit-scrollbar {
  width: 6px;
}

.nim-chat-messages::-webkit-scrollbar-track {
  background: transparent;
}

.nim-chat-messages::-webkit-scrollbar-thumb {
  background: #b6b6b6;
  border-radius: 3px;
}

.nim-chat-messages::-webkit-scrollbar-thumb:hover {
  background: #6b6b6b;
}

/* Animation for thinking indicator */
@keyframes nim-bounce {
  0%,
  80%,
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.nim-thinking-dot {
  animation: nim-bounce 1.4s infinite ease-in-out both;
}

.nim-thinking-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.nim-thinking-dot:nth-child(2) {
  animation-delay: -0.16s;
}

.nim-thinking-dot:nth-child(3) {
  animation-delay: 0s;
}

/* Slide in animation for panel */
@keyframes nim-slide-in {
  from {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.nim-panel-enter {
  animation: nim-slide-in 0.2s ease-out forwards;
}

/* Countdown animation */
@keyframes nim-countdown {
  from {
    stroke-dashoffset: 0;
  }
  to {
    stroke-dashoffset: 100;
  }
}

/* Markdown styling in messages */
.nim-message-content p {
  margin: 0;
}

.nim-message-content p + p {
  margin-top: 0.5rem;
}

.nim-message-content code {
  background: rgba(35, 31, 24, 0.1);
  padding: 0.125rem 0.25rem;
  border-radius: 0.25rem;
  font-size: 0.875em;
  font-family: "Helvetica Monospaced Pro", monospace;
}

.nim-message-content pre {
  background: rgba(35, 31, 24, 0.1);
  padding: 0.75rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 0.5rem 0;
}

.nim-message-content pre code {
  background: none;
  padding: 0;
}

.nim-message-content ul,
.nim-message-content ol {
  margin: 0.5rem 0;
  padding-left: 1.5rem;
}

.nim-message-content li {
  margin: 0.25rem 0;
}

.nim-message-content a {
  color: inherit;
  text-decoration: underline;
}

.nim-message-content strong {
  font-weight: 600;
}

/* ============================================================================
   DASHBOARD STYLES
   ============================================================================ */

.dashboard {
  display: flex;
  height: 100vh;
  background-color: var(--nim-white, #ffffff);
  position: relative;
  overflow: hidden;
}

.dashboard.sidebar-open .main-content {
  margin-left: 16rem;
  transition: margin-left 0.3s ease-in-out;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  min-height: 0;
  overflow: hidden;
  position: relative;
  transition: margin-left 0.3s ease-in-out;
}

.dashboard-container {
  flex: 1;
  background-color: var(--nim-cream, #f1ede7);
  border-radius: 1.5rem;
  margin: 0rem 1rem 1rem 1rem;
  padding: 1rem;
  overflow: hidden;
  display: flex;
  min-height: 0;
  flex-direction: column;
}

.dashboard-header {
  background-color: var(--nim-white, #ffffff);
  padding: 1rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 50;
  position: relative;
  flex-shrink: 0;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.menu-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  border: none;
  background: none;
  color: var(--nim-brown, #492610);
  cursor: pointer;
  border-radius: 0.5rem;
  transition: background-color 0.2s;
}

.menu-button:hover {
  background-color: var(--nim-cream, #f1ede7);
}

.dashboard-title {
  font-family: var(--font-display, "ABC Marist", Georgia, serif);
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--nim-black, #231f18);
  margin: 0;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.profile-name {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--nim-black, #231f18);
}

.profile-avatar {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  background-color: var(--nim-orange, #ff6d00);
  color: var(--nim-white, #ffffff);
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.75rem;
  font-weight: 600;
}

.logout-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border: 1px solid var(--nim-cream, #f1ede7);
  background: none;
  color: var(--nim-brown, #492610);
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
}

.logout-button:hover {
  background-color: var(--nim-cream, #f1ede7);
  color: var(--nim-orange, #ff6d00);
  align-items: stretch;
}

.error-banner {
  background-color: #fee2e2;
  border: 1px solid #fecaca;
  color: #dc2626;
  padding: 0.75rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0.5rem 1rem 0 1rem;
  border-radius: 0.5rem;
  flex-shrink: 0;
}

.error-banner button {
  background-color: #dc2626;
  color: white;
  border: none;
  padding: 0.25rem 0.75rem;
  border-radius: 0.25rem;
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.75rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

.error-banner button:hover {
  background-color: #b91c1c;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 1fr;
  gap: 1rem;
  padding: 0.5rem;
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

@media (min-width: 1024px) {
  .dashboard-grid {
    align-items: stretch;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 1rem;
    grid-template-areas:
      "balance ai"
      "transactions spending";
  }

  .balance-section {
    grid-area: balance;
  }
  .ai-section {
    grid-area: ai;
  }
  .transactions-section {
    grid-area: transactions;
  }
  .spending-section {
    grid-area: spending;
  }
}

.balance-section {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
  min-height: 0;
  height: 100%;
}

@media (min-width: 768px) {
  .balance-section {
    grid-template-columns: 1fr 1fr;
  }
}

.section-card {
  background-color: var(--nim-white, #ffffff);
  border-radius: 1rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  padding: 1.5rem;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}

.section-title {
  font-family: var(--font-display, "ABC Marist", Georgia, serif);
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--nim-black, #231f18);
  margin: 0 0 1rem 0;
}

.ai-section .section-card {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.ai-section .chat-panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.ai-section .nim-chat-messages {
  flex: 1;
  overflow-y: auto;
}

.ai-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1rem;
  flex-shrink: 0;
}

.ai-content {
  flex: 1;
  height: 0; /* Force flexbox to respect height */
  overflow: hidden;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.75rem;
}

.status-dot {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background-color: currentColor;
}

.status-indicator.online {
  color: var(--nim-green, #188a31);
}

.status-indicator.connecting {
  color: var(--nim-orange, #ff6d00);
}

.status-indicator.connecting .status-dot {
  animation: pulse 2s infinite;
}

.status-indicator.offline {
  color: #dc2626;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.transactions-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  min-height: 0;
  flex: 1;
  overflow-y: auto;
}

.transaction-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem;
  background-color: var(--nim-cream, #f1ede7);
  border-radius: 0.5rem;
}

.transaction-info {
  flex: 1;
}

.transaction-description {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--nim-black, #231f18);
  margin-bottom: 0.25rem;
}

.transaction-date {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.75rem;
  color: var(--nim-brown, #492610);
  opacity: 0.6;
}

.transaction-amount {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  font-weight: 600;
}

.transaction-amount.send,
.transaction-amount.withdrawal {
  color: #dc2626;
}

.transaction-amount.receive,
.transaction-amount.deposit {
  color: var(--nim-green, #188a31);
}

.spending-chart {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

.spending-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.spending-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.spending-category {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--nim-black, #231f18);
}

.spending-amount {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--nim-black, #231f18);
}

.spending-bar {
  width: 100%;
  height: 0.5rem;
  background-color: var(--nim-cream, #f1ede7);
  border-radius: 0.25rem;
  overflow: hidden;
}

.spending-fill {
  height: 100%;
  background-color: var(--nim-orange, #ff6d00);
  border-radius: 0.25rem;
  transition: width 0.3s ease;
}

.spending-percentage {
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.75rem;
  color: var(--nim-brown, #492610);
  opacity: 0.6;
  align-self: flex-end;
}

.loading-placeholder,
.empty-state {
  text-align: center;
  color: var(--nim-brown, #492610);
  opacity: 0.6;
  font-family: var(--font-body, "Helvetica Monospaced Pro", monospace);
  font-size: 0.875rem;
  padding: 2rem;
}
